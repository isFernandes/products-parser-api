{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "verbose": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "moduleFileExtensions": ["ts", "tsx", "js", "json", "node"],
  "testMatch": ["**/?(*.)+(spec|test).[t]s?(x)"],
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.json",
        "diagnostics": true
      }
    ]
  }
}
